<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AugieBlue">

    <TextView
        android:text="@string/roomStateDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="94dp"
        android:id="@+id/textView2"
        android:textSize="22sp"
        android:textColor="@color/AugieGold"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/roomIdEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        android:gravity="center_horizontal"
        android:textColor="@color/AugieGold"
        android:textSize="18sp" />

    <Button
        android:text="Check In / Check Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomIdTxTFld"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/changeStateBtn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/roomIdTxTFld"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Room312"
        android:background="@color/AugieBlue"
        android:textColor="?attr/colorBackgroundFloating"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />
</RelativeLayout>